<% layout("/layouts/boilerplate.ejs") %>

<body>
    
    <div class="row">
        <div class="col-8 offset-2">
            <br> <br>
        <h2>Update Listing</h2>
            <br> <br>
    <form method="post" action="/listings/<%=listing._id %>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="md-3"  >
            <label for="title">Title</label>
        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required />
        <div class="invalid-feedback"> Enter a catchy Title </div>
        </div>
        
        <br>

        <div class="md-3">
         <label for="description">Description</label>
        <textarea name="listing[description]"  class="form-control"  required><%=listing.description%></textarea>
        <div class="invalid-feedback"> Enter valid Description </div>

        </div>

        <br> 

        <div class="md-3">
            <img src="<%=originalImageUrl%>" alt="">
        </div>    
        
        <br> 

        <div class="md-3">
            <label for="image">Upload New Image</label>
        <input type="file" name="listing[image]"  class="form-control"/>
        <div class="invalid-feedback"> Enter valid url</div>

        </div>
        
        <br><br>

        <div class="row">
        <div class="md-3 col-md-4">
        <label for="price">Price</label>
        <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control"/>
        <div class="invalid-feedback"> Enter valid price</div>
        
        </div>

        <br> <br>

        <div class="md-3 col-md-8">
        <label for="country">Country</label>
        <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required />
        <div class="invalid-feedback"> Country should must be valid  </div>
        
        </div>
        </div>

        <br><br>

        <div class="md-3">
        <label for="location">Location</label>
        <input type="text" name="listing[location]" value="<%=listing.location%>"  class="form-control" required />
        <div class="invalid-feedback">Location should must be valid  </div>
        </div>

        <br> <br>
        <button type="submit" class="btn btn-dark btn-color ">Add</button>
    </form>
    <br> <br>
</div>
</div>
</body>